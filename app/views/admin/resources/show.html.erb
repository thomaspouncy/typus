<%
  page_title = Typus::I18n.t("Show %{resource}", :resource => @resource.model_name.human)
  title(page_title)
%>

<% content_for :main_grid do %>

<%= display_flash_message %>
<%= render 'show' %>

<div class="boxed">
  <div class="page-heading padded clearfix">
    <h2>
      <%= page_title %>
      <small><%= list_actions %></small>
    </h2>
  </div>

  <div class="padded">
    <dl>
      <% build_display(@item, fields).each do |attribute, type| %>
        <dt><%= attribute %></dt>
        <dd><%= type %></dd>
      <% end %>
    </dl>
  </div>
</div>

<div class="boxed">
  <%= typus_relationships %>
</div>
<% end %>

<div class="grid_2">
  <%= build_sidebar %>
</div>

<div class="grid_8">
  <%= yield :main_grid %>
</div>
